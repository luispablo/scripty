<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>
    <style name="DialogTheme" parent="android:Theme.Holo.Light.Dialog" />

    <style name="TerminalListView" parent="android:style/Widget.ListView">
        <item name="background">@color/terminal_back</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="TerminalListItem">
        <item name="android:textColor">@color/terminal_font</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12dp</item>
    </style>

</resources>
